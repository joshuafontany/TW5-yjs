title: $:/plugins/joshuafontany/yjs/SelectThemes
caption: Manage Themes

<$button>
  Save Theme Selection
  <$action-websocketmessage
    $type='updateTiddlyWikiInfo'
    themeList={{$:/Yjs/ActiveThemeList!!list}}
  />
  <$action-websocketmessage
    $type='unloadWiki'
    wikiName={{$:/status/WikiName}}
  />
</$button> <<helpButton "$:/plugins/joshuafontany/yjs/AboutSavePluginSelection">>

<a href='javascript:history.go(0)'>Refresh Page</a> <<helpButton "$:/plugins/joshuafontany/yjs/AboutRefreshPage">>

<br>
Select Theme Author: <$select
  tiddler='$:/state/Yjs/SelectedAuthor'
  default='all'
>
  <option
    value='all'
  >
    All
  </option>
  <$list
    filter='[[$:/Yjs/AvailableThemeList]indexes[]splitbefore[/]]'
    variable='themeAuthor'
  >
    <option>
      <<themeAuthor>>
    </option>
  </$list>
</$select> <<helpButton "$:/plugins/joshuafontany/yjs/AboutSelectPluginAuthor">>

Search: <$edit-text
  tiddler='$:/state/Yjs/SearchThemes'
  default=''
  placeholder='Search Themes'
  tag='input'
/>

<$list
  filter='[[$:/state/Yjs/SelectedAuthor]has[text]!text[all]]'
  variable='unused'
>
  <$set
    name=themeAuthor
    value={{$:/state/Yjs/SelectedAuthor}}
  >
    <h2><$text text=<<themeAuthor>>></$text></h2>
    <$list
      filter='[[$:/Yjs/AvailableThemeList]indexes[]search{$:/state/Yjs/SearchThemes}prefix<themeAuthor>]'
    >
      <$list
        filter='[list[$:/Yjs/ActiveThemeList]match<currentTiddler>]'
        emptyMessage="""
        <$button
          class='tc-btn-invisible'
        >
          <input
            type='checkbox'
          />
          <b>
            <$view
              field='title'
            />
          </b>
          <$action-listops
            $tiddler='$:/Yjs/ActiveThemeList'
            $subfilter='+[append<currentTiddler>]'
          />
        </$button>
        :
        <$view tiddler='$:/Yjs/AvailableThemeList' index=<<currentTiddler>>/>
        <br>"""
      >
        <$button
          class='tc-btn-invisible'
        >
          <input
            type='checkbox'
            checked
          />
          <b>
            <$view
              field='title'
            />
          </b>
          <$action-listops
            $tiddler='$:/Yjs/ActiveThemeList'
            $subfilter='+[remove<currentTiddler>]'
          />
        </$button>
        :
        <$view tiddler='$:/Yjs/AvailableThemeList' index=<<currentTiddler>>/>
        <br>
      </$list>
    </$list>
  </$set>
</$list>

<$list
  filter='[[$:/state/Yjs/SelectedAuthor]text[all]][[$:/state/Yjs/SelectedAuthor]!has[text]] +[limit[1]]'
  variable='unused'
>
  <$list
    filter='[[$:/Yjs/AvailableThemeList]indexes[]splitbefore[/]]'
    variable='themeAuthor'
  >
    <h2><$text text=<<themeAuthor>>></$text></h2>
    <$list
      filter='[[$:/Yjs/AvailableThemeList]indexes[]search{$:/state/Yjs/SearchThemes}prefix<themeAuthor>]'
    >
      <$list
        filter='[list[$:/Yjs/ActiveThemeList]match<currentTiddler>]'
        emptyMessage="""
        <$button
          class='tc-btn-invisible'
        >
          <input
            type='checkbox'
          />
          <b>
            <$view
              field='title'
            />
          </b>
          <$action-listops
            $tiddler='$:/Yjs/ActiveThemeList'
            $subfilter='+[append<currentTiddler>]'
          />
        </$button>
        :
        <$view tiddler='$:/Yjs/AvailableThemeList' index=<<currentTiddler>>/>
        <br>"""
      >
        <$button
          class='tc-btn-invisible'
        >
          <input
            type='checkbox'
            checked
          />
          <b>
            <$view
              field='title'
            />
          </b>
          <$action-listops
            $tiddler='$:/Yjs/ActiveThemeList'
            $subfilter='+[remove<currentTiddler>]'
          />
        </$button>
        :
        <$view tiddler='$:/Yjs/AvailableThemeList' index=<<currentTiddler>>/>
        <br>
      </$list>
    </$list>
  </$list>
</$list>